<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:centerColor="#ffffff"
                android:endColor="#ffffff"
                android:angle="270" />
            <stroke
                android:width="2.3dp"
                android:color="@color/game_box_border" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:centerColor="#ffffff"
                android:endColor="#ffffff"
                android:angle="270" />
            <stroke
                android:width="2.3dp"
                android:color="@color/game_box_border" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:centerColor="#ffffff"
                android:endColor="#ffffff"
                android:angle="270" />
            <stroke
                android:width="2.3dp"
                android:color="@color/game_box_border" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:centerColor="#ffffff"
                android:endColor="#ffffff"
                android:angle="270"
                />
            <stroke
                android:width="0.7dp"
                android:color="@color/game_box_border" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="5dp"
                android:right="5dp"
                />
        </shape>
    </item>

</selector>