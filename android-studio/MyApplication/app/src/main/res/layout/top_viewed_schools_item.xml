<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="@drawable/badge_circle_yellow"
            android:textColor="#ffffff"
            android:id="@+id/serialNoText"
            android:gravity="center"
            android:textSize="13dp"
            android:text="-"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/schoolNameText"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/schools_title"
                android:textSize="16dp"
                android:text="-"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:textSize="14dp"
                    android:id="@+id/districtText"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/schools_district"
                    android:text="-"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:id="@+id/viewImage"
                    android:layout_marginLeft="15dp"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/view"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:textSize="13dp"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/viewText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
