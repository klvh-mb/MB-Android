<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/QuestionPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/questionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="this is question panel.............."
            android:textSize="25dp" />
    </LinearLayout>

    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/questionnare_component"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/QuestionPanel"
       >

        <ImageView
            android:id="@+id/questionnare_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingLeft="20dp"
            android:src="@drawable/community" />

        <TextView
            android:id="@+id/Text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/questionnare_img"
            android:text="782"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="700"
            android:textSize="20dp"
            android:layout_below="@+id/Text1"
            android:layout_toRightOf="@+id/questionnare_img"/>
</RelativeLayout>
<LinearLayout
    android:id="@+id/questionnareText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/questionnare_component">

    <TextView
        android:id="@+id/Text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Questionare text...................
        ........................"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/questionnare_img"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/imgComponent"
        android:layout_below="@id/questionnareText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/timeImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:layout_toRightOf="@+id/timeImg"/>

            </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/placeImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:layout_toRightOf="@+id/placeImg"/>

        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/imgComponent"
        android:layout_width="match_parent"
        android:id="@+id/listComponent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/detail_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            </ListView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/comms"
            android:layout_weight=".33"
            android:drawableLeft="@drawable/comm"
            android:text="comms"
            android:background="#ffffff"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/articles"
            android:layout_weight=".34"
            android:drawableLeft="@drawable/tag"
            android:text="articles"
            android:background="#ffffff"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/profiles"
            android:layout_weight=".33"
            android:text="profile"
            android:background="#ffffff"
            android:drawableLeft="@drawable/profile"
            />
    </LinearLayout>
</RelativeLayout>























