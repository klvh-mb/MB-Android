<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/actionbar_bg_purple">

        <ImageView
            android:id="@+id/backAction"
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="false" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="@string/my_profile_actionbar_title"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:layout_alignParentRight="true">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:id="@+id/requestLayout">

                <ImageView
                    android:id="@+id/request"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/w_profile"
                    android:layout_toLeftOf="@+id/notification"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/requestCount"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:text="-"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:textColor="#FFF"
                    android:background="@drawable/badge_circle"
                    android:layout_alignTop="@+id/request"
                    android:layout_toLeftOf="@+id/notification"
                    android:layout_toStartOf="@+id/notification"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginBottom="7dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/notificationLayout"
                android:layout_marginRight="15dp">

                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/w_notification"
                    android:layout_toLeftOf="@+id/setting"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/notificationCount"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:text="-"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:background="@drawable/badge_circle"
                    android:layout_alignTop="@+id/setting"
                    android:layout_alignRight="@+id/notification"
                    android:layout_alignEnd="@+id/notification"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginBottom="7dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/messageLayout"
                android:layout_marginRight="15dp">

                <ImageView
                    android:id="@+id/message"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/w_message"
                    android:layout_toLeftOf="@+id/setting"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/messageCount"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:text="-"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:background="@drawable/badge_circle"
                    android:layout_alignTop="@+id/setting"
                    android:layout_alignRight="@+id/message"
                    android:layout_alignEnd="@+id/message"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginBottom="7dp" />
            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>