<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:foreground="#01000000">

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/communityLayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#EFEFF4"
            android:orientation="horizontal"
            android:layout_alignParentStart="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="My Community"
                android:textColor="#AAAAAA"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="32dp"
                    android:src="@drawable/view" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="27"
                    android:textColor="#AAAAAA"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/profile_comments" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="4"
                    android:textColor="#AAAAAA"
                    android:textSize="15dp"
                    android:layout_marginTop="7dp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/QuestionPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/communityLayout"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/questionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="#333" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/listComponent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/QuestionPanel"
            android:layout_marginBottom="50dp">

            <ListView
                android:id="@+id/detail_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"></ListView>
        </RelativeLayout>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#d3d6db"
            android:orientation="horizontal">

            <Button
                android:id="@+id/page"
                android:layout_width="45dp"
                android:layout_height="fill_parent"
                android:layout_weight="10"
                android:background="@drawable/bg_parent_rounded_corner"
                android:drawablePadding="8dp"
                android:singleLine="true"
                android:layout_margin="5dp"></Button>

            <TextView
                android:id="@+id/commentBody"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="right|center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="70"
                android:background="@drawable/edit_text"
                android:drawableLeft="@drawable/comm"
                android:layout_marginRight="5dp">

            </TextView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
</FrameLayout>























