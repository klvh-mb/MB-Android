<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#ffffff"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/communityImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"></ImageView>

    <LinearLayout
        android:id="@+id/communityLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/communityImg">

        <TextView
            android:id="@+id/commName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:textColor="@color/dark_gray" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/communityLayout"
        android:layout_toRightOf="@+id/communityImg">

        <LinearLayout
            android:id="@+id/imageComponent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/post"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/post" />

            <TextView
                android:id="@+id/noPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/post"
                android:text="-"
                android:textSize="14dp"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:id="@+id/memberImg"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/noPost"
                android:src="@drawable/profile_community" />

            <TextView
                android:id="@+id/noMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/memberImg"
                android:text="-"
                android:textSize="14dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <ImageView
            android:id="@+id/mem_join"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/check" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/postLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageLayout"
        android:layout_toRightOf="@+id/communityImg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="-"
            android:textSize="15dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/postLayout"
        android:background="@drawable/bar1" />
</RelativeLayout>


