<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rootLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="10dp"
        android:id="@+id/topViewLayout"
        android:background="@drawable/schools_pn_edit_text_round"
        android:layout_width="wrap_content"
        android:layout_height="600dp">
        <LinearLayout
            android:id="@+id/headerLayout1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/schools_green_book"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="This is Top Viewed PNs"/>
            </LinearLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_below="@+id/headerLayout1"
            android:id="@+id/bar"
            android:background="@drawable/dottedline"
            android:layout_width="match_parent"
            android:layout_height="3dp">
            </View>
    <ListView
        android:layout_marginTop="15dp"
        android:layout_below="@+id/headerLayout1"
        android:id="@+id/listTopPN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     />
        <ImageView
            android:id="@+id/scrollButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/dropdown_btn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/topBookmarkedLayout"
        android:background="@drawable/schools_pn_edit_text_round"
        android:layout_width="wrap_content"
        android:layout_height="620dp">
        <LinearLayout
            android:id="@+id/headerLayout2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/schools_green_book"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="This is Top Bookmarked PNs"/>
        </LinearLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_below="@+id/headerLayout2"
            android:id="@+id/bar1"
            android:background="@drawable/dottedline"
            android:layout_width="match_parent"
            android:layout_height="3dp">
        </View>
        <ListView
            android:layout_marginTop="15dp"
            android:layout_below="@+id/headerLayout2"
            android:id="@+id/listTopBookmarkedPN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</LinearLayout>
    </ScrollView>
</RelativeLayout>