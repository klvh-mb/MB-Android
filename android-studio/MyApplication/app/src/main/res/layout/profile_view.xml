<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    android:id="@+id/profileLayout">

    <RelativeLayout
        android:id="@+id/profilePic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/c"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilePic">

        <Button
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/profile"
            android:text="edit"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:id="@+id/menuQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit">
        <ImageView
            android:id="@+id/questionPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_posts"/>
        <TextView
            android:layout_marginLeft="25dp"
            android:layout_weight="75"
            android:id="@+id/questionText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Questions"
            android:textStyle="bold"
            android:layout_toRightOf="@id/questionPic"/>
        <TextView
            android:layout_weight="20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/Edit1"
            android:layout_toRightOf="@id/questionText"
            android:text="2"            />
        <ImageView
            android:layout_weight="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/menuAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menuQuestion">
        <ImageView
            android:id="@+id/answerPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_comments"/>
        <TextView
            android:textStyle="bold"
            android:layout_weight="75"
            android:id="@+id/answerText"
            android:layout_width="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_height="match_parent"
            android:text="Answer"
            android:layout_toRightOf="@id/answerPic"/>
        <TextView
            android:layout_weight="20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/Edit2"
            android:layout_toRightOf="@id/answerText"
            android:editable="false"
            android:text="2"
            />
        <ImageView
            android:layout_weight="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/menuBookmarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menuAnswer"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/bookmarksPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_bookmarks"/>
        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:layout_weight="75"
            android:id="@+id/bookmarksText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Bookmark"/>
        <TextView
            android:layout_weight="20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/Edit3"
            android:editable="false"
            android:text="2"
            />
        <ImageView
            android:layout_weight="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/comms"
            android:layout_weight=".33"
            android:drawableLeft="@drawable/comm"
            android:text="comms"
            android:background="#ffffff"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/articles"
            android:layout_weight=".34"
            android:drawableLeft="@drawable/tag"
            android:text="articles"
            android:background="#ffffff"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/profiles"
            android:layout_weight=".33"
            android:text="profile"
            android:background="#ffffff"
            android:drawableLeft="@drawable/profile"
            />


    </LinearLayout>
</RelativeLayout>
